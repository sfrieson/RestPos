<%= render 'nav' %>
<h1>Employees</h1>
<%= link_to 'New User', new_user_path, class: "button" %><%= link_to 'Menu', dishes_path, class: "button" %>
<ul>
    <% @users.each do |user| %>
        <li>
            <%= user.username %> <%="| #{user.position}" if user.position%>
            <%= link_to "Edit", edit_user_path(user) if current_user.position == "Manager"%>
            <%= link_to icon('times'), user_path(user), method: :delete if current_user.position == "Manager"%>
        </li>

    <% end %>
</ul>
